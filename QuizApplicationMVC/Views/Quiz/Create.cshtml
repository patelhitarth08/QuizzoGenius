@model QuizApplicationMVC.Models.Quiz

@{
    ViewData["Title"] = "Create";
}

<style>
    .dark-input {
        background-color: #333; /* Dark background color */
        color: #fff; /* Text color */
        border: 1px solid #555; /* Border color */
    }

</style>


<div class="container mt-4">
    <h1 class="text-white">Create Quiz</h1>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="control-label text-white">Title</label>
                    <input asp-for="Title" class="form-control dark-input" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label text-white">Description</label>
                    <input asp-for="Description" class="form-control dark-input" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mb-4">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
